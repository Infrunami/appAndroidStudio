<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tiempos">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="281dp"
            android:layout_height="42dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:hint="@string/select"
            app:layout_constraintTop_toBottomOf="@+id/auto_complete_txt"
            tools:layout_editor_absoluteX="65dp">

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/editTextTime4"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="236dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_marginTop="244dp"
            android:layout_marginEnd="16dp"
            android:onClick="onButtonSelectTimeClick"
            android:text="Select Time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="223dp"
            android:layout_height="33dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="188dp"
            android:text="Tiempo descansos:"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="250dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="116dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="16dp"
            android:onClick="onButtonSelectTimeClick"
            android:text="Select Time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="223dp"
            android:layout_height="33dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="68dp"
            android:text="Tiempo sesiones:"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_txt"
            android:layout_width="201dp"
            android:layout_height="40dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="408dp"
            android:inputType="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>